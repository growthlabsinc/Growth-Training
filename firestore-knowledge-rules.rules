rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Existing rules for other collections...
    
    // AI Coach Knowledge Base rules
    match /ai_coach_knowledge/{document=**} {
      // Allow read access to authenticated users only
      allow read: if request.auth != null && !request.auth.token.firebase.sign_in_provider.matches('anonymous');
      
      // Only allow writes from Firebase Admin SDK (server-side)
      // This prevents users from modifying the knowledge base
      allow write: if false;
    }
  }
}